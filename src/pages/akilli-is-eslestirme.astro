---
// src/akilli-is-eslestirme.astro
import BaseLayout from '../layouts/BaseLayout.astro';

// SEO parametreleri
const seoTitle = "Akıllı İş Eşleştirme | Yatırım, Ortaklık ve Çözüm Platformu - MeetWork";
const seoDescription = "MeetWork Akıllı İş Eşleştirme ile ihtiyacınıza göre size en uygun yatırımcı, iş ortağı, mentor veya çözüm ortağını bulun. Yapay zeka destekli eşleştirme algoritması ile doğru kişilerle buluşun.";
const seoKeywords = "iş eşleştirme, yatırımcı bul, iş ortağı bul, mentor bul, çözüm ortağı, iş birliği platformu, b2b eşleştirme, iş ağı";
const canonicalUrl = "https://meetwork.com.tr.tr/akilli-is-eslestirme";

// Örnek eşleştirme kategorileri
const eslestirmeKategorileri = [
  {
    id: "yatirimci",
    baslik: "Yatırımcı - Girişim Eşleştirme",
    ikon: "bi-cash-coin",
    renk: "success",
    aciklama: "Yatırım arayan girişimler ile melek yatırımcılar, VC fonlar ve kurumsal yatırımcıları bir araya getiriyoruz.",
    altKategoriler: ["Melek Yatırım", "VC Fon", "Kurumsal Yatırım", "Kitle Fonlaması"]
  },
  {
    id: "is-ortakligi",
    baslik: "İş Ortaklığı Eşleştirme",
    ikon: "bi-handshake",
    renk: "primary",
    aciklama: "Stratejik ortaklık, joint venture, distribütörlük, bayilik ve tedarikçi eşleştirmeleri.",
    altKategoriler: ["Stratejik Ortak", "Joint Venture", "Distribütör", "Tedarikçi"]
  },
  {
    id: "mentorluk",
    baslik: "Mentor - Danışman Eşleştirme",
    ikon: "bi-people",
    renk: "warning",
    aciklama: "Alanında uzman mentorlar ve danışmanlarla birebir görüşmeler, düzenli danışmanlık hizmeti.",
    altKategoriler: ["İş Geliştirme", "Finans", "Pazarlama", "Teknoloji", "Hukuk"]
  },
  {
    id: "cozum-ortagi",
    baslik: "Çözüm Ortağı Eşleştirme",
    ikon: "bi-gear",
    renk: "info",
    aciklama: "İhtiyacınız olan yazılım, danışmanlık, dış kaynak hizmetleri için doğru çözüm ortağını bulun.",
    altKategoriler: ["Yazılım Geliştirme", "Dijital Pazarlama", "Muhasebe", "Hukuk", "Lojistik"]
  },
  {
    id: "ihracat",
    baslik: "İhracat Eşleştirme",
    ikon: "bi-globe",
    renk: "danger",
    aciklama: "Yurtdışına açılmak isteyen firmalar ile alım yapan yabancı firmalar, ihracat danışmanları ve lojistik çözümleri.",
    altKategoriler: ["Alıcı Firmalar", "İhracat Danışmanı", "Yurtdışı Distribütör", "Lojistik"]
  },
  {
    id: "acil-durum",
    baslik: "Acil Durum Destek Eşleştirme",
    ikon: "bi-exclamation-triangle",
    renk: "danger",
    aciklama: "Zor durumdaki firmalar ile destek olmak isteyen yatırımcı, danışman ve çözüm ortaklarını buluşturuyoruz.",
    altKategoriler: ["Finansal Destek", "Danışmanlık", "Lojistik Destek", "Makine Ekipman"]
  }
];

// Örnek başarılı eşleştirme hikayeleri
const basariHikayeleri = [
  {
    id: "HIK001",
    tip: "Yatırım Eşleştirmesi",
    firma1: "Teknoloji Girişimi (Yazılım)",
    firma2: "Melek Yatırımcı Ağı",
    sonuc: "1.2M ₺ yatırım",
    hikaye: "Yapay zeka destekli yazılım çözümleri geliştiren girişim, platformumuz üzerinden bulduğu melek yatırımcıdan 1.2 milyon TL yatırım alarak ekibini büyüttü ve yurtdışına açıldı.",
    sure: "3 ay"
  },
  {
    id: "HIK002",
    tip: "İş Ortaklığı",
    firma1: "Mobilya Üreticisi",
    firma2: "İç Mimarlık Ofisi",
    sonuc: "Stratejik Ortaklık",
    hikaye: "Mobilya üreticisi firma, projelerinde kullanmak üzere iç mimarlık ofisi ile ortaklık kurdu. İlk yıl 5 büyük projede birlikte çalıştılar.",
    sure: "4 ay"
  },
  {
    id: "HIK003",
    tip: "Mentorluk",
    firma1: "Gıda Girişimi",
    firma2: "Pazarlama Uzmanı",
    sonuc: "Satışlarda %300 artış",
    hikaye: "Gıda girişimi, mentor desteğiyle dijital pazarlama stratejisini yeniledi ve 6 ayda satışlarını 3 katına çıkardı.",
    sure: "6 ay"
  }
];

// Nasıl çalışır adımları
const nasilCalisir = [
  {
    adim: 1,
    baslik: "Ücretsiz Üye Olun",
    aciklama: "panel.meetwork.net adresinden 2 dakikada üye olun, profilinizi oluşturun.",
    ikon: "bi-person-plus"
  },
  {
    adim: 2,
    baslik: "İhtiyacınızı Belirleyin",
    aciklama: "Yatırım, ortaklık, mentorluk veya çözüm ortağı ihtiyacınızı detaylandırın.",
    ikon: "bi-chat-square-text"
  },
  {
    adim: 3,
    baslik: "Yapay Zeka Eşleştirmesi",
    aciklama: "Akıllı algoritmamız size en uygun kişi ve firmaları listeler.",
    ikon: "bi-cpu"
  },
  {
    adim: 4,
    baslik: "Görüşün ve Anlaşın",
    aciklama: "Eşleştiğiniz kişi veya firmayla görüşün, iş birliğinizi başlatın.",
    ikon: "bi-chat-dots"
  }
];

// İstatistikler
const istatistikler = {
  basariliEslesme: 1250,
  aktifKullanici: 8750,
  mentorSayisi: 180,
  yatirimMiktari: "185M ₺"
};
---

<BaseLayout 
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
  canonical={canonicalUrl}
  ogImage="/images/akilli-eslestirme-og.jpg"
>

  <main class="container py-5">
    <!-- Hero Banner -->
    <section class="mb-5">
      <div class="row align-items-center">
        <div class="col-lg-7">
          <div class="mb-4">
            <span class="badge bg-gradient-purple text-white mb-3 px-3 py-2">
              <i class="bi bi-stars me-2"></i>Yapay Zeka Destekli Eşleştirme
            </span>
            <h1 class="display-4 fw-bold text-dark mb-4">
              Akıllı İş Eşleştirme: 
              <span class="text-gradient-purple">Doğru Kişi, Doğru Zaman, Doğru İş Birliği</span>
            </h1>
            <p class="lead text-dark mb-4">
              MeetWork Akıllı İş Eşleştirme ile ihtiyacınıza göre size en uygun yatırımcı, iş ortağı, 
              mentor veya çözüm ortağını bulun. Yapay zeka destekli algoritmamız, profilinizi analiz ederek 
              size en uygun kişi ve firmaları listeler.
            </p>
          </div>
          
          <!-- İstatistikler -->
          <div class="row g-3 mb-4">
            <div class="col-md-3 col-6">
              <div class="bg-light p-3 rounded-3 text-center">
                <h3 class="h2 text-purple mb-0">{istatistikler.basariliEslesme}+</h3>
                <small class="text-muted">Başarılı Eşleşme</small>
              </div>
            </div>
            <div class="col-md-3 col-6">
              <div class="bg-light p-3 rounded-3 text-center">
                <h3 class="h2 text-primary mb-0">{istatistikler.aktifKullanici}+</h3>
                <small class="text-muted">Aktif Kullanıcı</small>
              </div>
            </div>
            <div class="col-md-3 col-6">
              <div class="bg-light p-3 rounded-3 text-center">
                <h3 class="h2 text-warning mb-0">{istatistikler.mentorSayisi}+</h3>
                <small class="text-muted">Uzman Mentor</small>
              </div>
            </div>
            <div class="col-md-3 col-6">
              <div class="bg-light p-3 rounded-3 text-center">
                <h3 class="h2 text-success mb-0">{istatistikler.yatirimMiktari}</h3>
                <small class="text-muted">Toplam Yatırım</small>
              </div>
            </div>
          </div>
          
          <div class="d-flex flex-wrap gap-3">
            <a href="https://panel.meetwork.net/kayit" 
               target="_blank"
               class="btn btn-purple px-4 py-3">
              <i class="bi bi-person-plus me-2"></i>Ücretsiz Üye Ol, Hemen Eşleşmeye Başla
            </a>
            <a href="#nasil-calisir" 
               class="btn btn-outline-purple px-4 py-3">
              <i class="bi bi-play-circle me-2"></i>Nasıl Çalışır?
            </a>
          </div>
        </div>
        
        <div class="col-lg-5">
          <div class="card border-0 shadow-lg bg-gradient-purple text-white">
            <div class="card-body p-5">
              <h4 class="card-title mb-4">
                <i class="bi bi-magic me-2"></i>
                Yapay Zeka Eşleştirme Algoritması
              </h4>
              <ul class="list-unstyled mb-4">
                <li class="mb-3">
                  <i class="bi bi-check-circle-fill me-2"></i>
                  <strong>Profil analizi:</strong> Sektör, büyüklük, hedefler
                </li>
                <li class="mb-3">
                  <i class="bi bi-check-circle-fill me-2"></i>
                  <strong>İhtiyaç eşleştirmesi:</strong> Ne arıyorsunuz?
                </li>
                <li class="mb-3">
                  <i class="bi bi-check-circle-fill me-2"></i>
                  <strong>Uyum skoru:</strong> %0-100 arası eşleşme yüzdesi
                </li>
                <li class="mb-3">
                  <i class="bi bi-check-circle-fill me-2"></i>
                  <strong>Geçmiş başarı:</strong> Benzer profillerin başarı hikayeleri
                </li>
                <li>
                  <i class="bi bi-check-circle-fill me-2"></i>
                  <strong>Öneri sistemi:</strong> Size özel tavsiyeler
                </li>
              </ul>
              
              <!-- Örnek eşleşme skoru -->
              <div class="bg-white bg-opacity-20 p-3 rounded-3">
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <small>Örnek Eşleşme Skoru</small>
                  <small class="fw-bold">%95</small>
                </div>
                <div class="progress" style="height: 8px;">
                  <div class="progress-bar bg-white" style="width: 95%"></div>
                </div>
                <div class="d-flex justify-content-between mt-2">
                  <small class="opacity-75">Teknoloji Girişimi</small>
                  <small class="opacity-75">Yatırım Fonu</small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Eşleştirme Kategorileri -->
    <section class="mb-5">
      <div class="text-center mb-5">
        <h2 class="display-6 fw-bold text-dark mb-3">Size Özel Eşleştirme Kategorileri</h2>
        <p class="lead text-muted">
          İhtiyacınız ne olursa olsun, doğru kişi veya firmayla buluşmanız için 6 farklı kategoride eşleştirme hizmeti
        </p>
      </div>
      
      <div class="row g-4">
        {eslestirmeKategorileri.map((kategori) => (
          <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm kategori-kart">
              <div class="card-body p-4">
                <div class={`bg-${kategori.renk} bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mb-3`} 
                     style="width: 60px; height: 60px;">
                  <i class={`bi ${kategori.ikon} fs-2 text-${kategori.renk}`}></i>
                </div>
                <h5 class="h5 text-dark mb-2">{kategori.baslik}</h5>
                <p class="text-muted small mb-3">{kategori.aciklama}</p>
                
                <div class="d-flex flex-wrap gap-2 mb-3">
                  {kategori.altKategoriler.slice(0, 3).map(alt => (
                    <span class="badge bg-light text-dark">{alt}</span>
                  ))}
                  {kategori.altKategoriler.length > 3 && (
                    <span class="badge bg-light text-dark">+{kategori.altKategoriler.length-3}</span>
                  )}
                </div>
                
                <a href={`https://panel.meetwork.net/eslestirme/${kategori.id}`}
                   target="_blank"
                   class={`btn btn-outline-${kategori.renk} w-100`}>
                  Eşleşmeye Başla <i class="bi bi-arrow-right ms-2"></i>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Nasıl Çalışır? -->
    <section class="mb-5" id="nasil-calisir">
      <div class="card border-0 bg-light">
        <div class="card-body p-5">
          <h2 class="h2 text-dark text-center mb-5">Akıllı Eşleştirme Nasıl Çalışır?</h2>
          
          <div class="row">
            {nasilCalisir.map((adim) => (
              <div class="col-md-3">
                <div class="text-center position-relative">
                  
                  </div>
                  <span class="badge bg-purple text-white rounded-pill mb-2">Adım {adim.adim}</span>
                  <h5 class="h6 text-dark mb-2">{adim.baslik}</h5>
                  <p class="text-muted small">{adim.aciklama}</p>
                  
                  {adim.adim < 4 && (
                    <div class="d-none d-md-block position-absolute top-50 end-0 translate-middle-y">
                      <i class="bi bi-arrow-right fs-3 text-purple opacity-50"></i>
                    </div>
                  )}
                </div>
              
            ))}
          </div>
          
          <div class="text-center mt-4">
            <a href="https://panel.meetwork.net/kayit" 
               target="_blank"
               class="btn btn-purple btn-lg px-5">
              <i class="bi bi-person-plus me-2"></i>Hemen Başla
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Başarı Hikayeleri -->
    <section class="mb-5">
      <h2 class="h2 text-dark text-center mb-5">Başarılı Eşleştirme Hikayeleri</h2>
      
      <div class="row">
        {basariHikayeleri.map((hikaye) => (
          <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
              <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                  <span class="badge bg-purple text-white me-2">{hikaye.tip}</span>
                  <span class="badge bg-light text-dark">{hikaye.sure}</span>
                </div>
                
                <div class="d-flex align-items-center justify-content-between mb-3">
                  <div class="text-center">
                    <div class="bg-light rounded-circle p-2 mb-1 mx-auto" style="width: 50px; height: 50px;">
                      <i class="bi bi-building fs-4 text-purple"></i>
                    </div>
                    <small class="text-dark fw-bold">{hikaye.firma1.split('(')[0]}</small>
                  </div>
                  <i class="bi bi-arrow-right fs-4 text-muted"></i>
                  <div class="text-center">
                    <div class="bg-light rounded-circle p-2 mb-1 mx-auto" style="width: 50px; height: 50px;">
                      <i class="bi bi-person fs-4 text-success"></i>
                    </div>
                    <small class="text-dark fw-bold">{hikaye.firma2.split(' ')[0]}</small>
                  </div>
                </div>
                
                <div class="bg-light p-3 rounded-3 mb-3">
                  <small class="text-muted">Eşleşme Sonucu</small>
                  <h6 class="text-purple mb-0">{hikaye.sonuc}</h6>
                </div>
                
                <p class="text-muted small mb-0">
                  <i class="bi bi-quote me-1"></i>
                  {hikaye.hikaye}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-4">
        <a href="https://panel.meetwork.net/basari-hikayeleri" 
           target="_blank"
           class="btn btn-outline-purple">
          Tüm Başarı Hikayeleri <i class="bi bi-arrow-right ms-2"></i>
        </a>
      </div>
    </section>

    <!-- Akıllı Eşleştirme Demo -->
    <section class="mb-5">
      <div class="card border-0 shadow-lg overflow-hidden">
        <div class="row g-0">
          <div class="col-lg-5 bg-gradient-purple text-white p-5">
            <h3 class="h3 mb-4">Size Özel Eşleştirme Skorunu Hemen Görün</h3>
            <p class="mb-4">
              Profilinizi oluşturun, yapay zeka destekli algoritmamız size en uygun 
              yatırımcı, iş ortağı ve mentorları listelesin.
            </p>
            
            <ul class="list-unstyled mb-4">
              <li class="mb-2">
                <i class="bi bi-check-circle-fill me-2"></i>
                %90+ eşleşme başarı oranı
              </li>
              <li class="mb-2">
                <i class="bi bi-check-circle-fill me-2"></i>
                50+ kriterde analiz
              </li>
              <li class="mb-2">
                <i class="bi bi-check-circle-fill me-2"></i>
                Gerçek zamanlı öneriler
              </li>
              <li>
                <i class="bi bi-check-circle-fill me-2"></i>
                Haftalık yeni eşleşme bildirimleri
              </li>
            </ul>
            
            <a href="https://panel.meetwork.net/kayit" 
               target="_blank"
               class="btn btn-light text-purple fw-bold px-4">
              <i class="bi bi-person-plus me-2"></i>Ücretsiz Üye Ol
            </a>
          </div>
          
          <div class="col-lg-7 bg-light p-5">
            <h5 class="text-dark mb-4">Örnek Eşleşme Sonuçları</h5>
            
            <div class="mb-3">
              <div class="d-flex justify-content-between align-items-center mb-1">
                <small class="text-dark">MeetWork Ventures (Yatırım Fonu)</small>
                <small class="text-success fw-bold">%95</small>
              </div>
              <div class="progress" style="height: 8px;">
                <div class="progress-bar bg-success" style="width: 95%"></div>
              </div>
              <small class="text-muted">MeetWork üyeleri doğrudan şirket birleştirme, satın alma ve Acil Destekler ile %95 kadarına destek oldu.</small>
            </div>
            
            <div class="mb-3">
              <div class="d-flex justify-content-between align-items-center mb-1">
                <small class="text-dark">Melek Yatırımcı</small>
                <small class="text-warning fw-bold">%82</small>
              </div>
              <div class="progress" style="height: 8px;">
                <div class="progress-bar bg-warning" style="width: 82%"></div>
              </div>
              <small class="text-muted">Girişimcileri destekleyen melek yatırımcılar girişimlerin %82 kadarına yatırım yaptı.</small>
            </div>
            
            <div class="mb-3">
              <div class="d-flex justify-content-between align-items-center mb-1">
                <small class="text-dark">İhracata Destek</small>
                <small class="text-primary fw-bold">%78</small>
              </div>
              <div class="progress" style="height: 8px;">
                <div class="progress-bar bg-primary" style="width: 78%"></div>
              </div>
              <small class="text-muted">Üylerimiz başta Ortadoğu ve Avrupa'ya sonra da diğer bölgelere MeetWork aracılığı ile %78 oranında ihracat yapıldı.</small>
            </div>
            
            <div class="mt-4 pt-3 border-top">
              <div class="d-flex align-items-center">
                <i class="bi bi-info-circle text-purple me-2 fs-5"></i>
                <small class="text-muted">
                  Eşleşme skorları, üye profillerinden gelen raporlar ve tercihlere göre hesaplanır. 
                  Üye olduğunuzda siz de bu tabloda yer alabilirsiniz.
                </small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Tüm Kategorilerde Eşleştirme -->
    <section class="mb-5">
      <h2 class="h2 text-dark text-center mb-4">Hangi Kategoride Eşleştirme Arıyorsunuz?</h2>
      <p class="lead text-muted text-center mb-5">
        Aşağıdaki kategorilerden size uygun olanı seçin, hemen eşleşmeye başlayın
      </p>
      
      <div class="row g-4">
        <div class="col-md-4">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-body p-4 text-center">
              <div class="bg-success bg-opacity-10 rounded-circle p-3 mx-auto mb-3" style="width: 70px; height: 70px;">
                <i class="bi bi-cash-coin fs-2 text-success"></i>
              </div>
              <h5 class="h5 text-dark mb-2">Yatırım Arıyorum</h5>
              <p class="text-muted small">
                Girişiminiz için yatırımcı, hibe veya teşvik desteği mi arıyorsunuz?
              </p>
              <a href="https://panel.meetwork.net/kayit?tur=yatirimci" 
                 target="_blank"
                 class="btn btn-outline-success w-100">
                Yatırımcı Bul
              </a>
            </div>
          </div>
        </div>
        
        <div class="col-md-4">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-body p-4 text-center">
              <div class="bg-primary bg-opacity-10 rounded-circle p-3 mx-auto mb-3" style="width: 70px; height: 70px;">
                <i class="bi bi-handshake fs-2 text-primary"></i>
              </div>
              <h5 class="h5 text-dark mb-2">İş Ortağı Arıyorum</h5>
              <p class="text-muted small">
                Stratejik ortak, distribütör, tedarikçi veya joint venture partneri mi arıyorsunuz?
              </p>
              <a href="https://panel.meetwork.net/kayit?tur=is-ortagi" 
                 target="_blank"
                 class="btn btn-outline-primary w-100">
                İş Ortağı Bul
              </a>
            </div>
          </div>
        </div>
        
        <div class="col-md-4">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-body p-4 text-center">
              <div class="bg-warning bg-opacity-10 rounded-circle p-3 mx-auto mb-3" style="width: 70px; height: 70px;">
