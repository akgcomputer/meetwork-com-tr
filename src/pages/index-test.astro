---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="MeetWork | Toplantı Fotoğrafları"
  description="MeetWork etkinliklerinden fotoğraflar. Networking toplantılarından kareler."
>

  <!-- Toplantıdan Kareler Slider Bölümü -->
  <section class="py-5 bg-light">
    <div class="container">
      <div class="text-center mb-5">
        <h2 class="display-5 text-dark mb-3">Toplantıdan Kareler</h2>
        <p class="lead text-muted">MeetWork networking etkinliklerinden en güzel anlar</p>
      </div>

      <!-- Multi Item Carousel -->
      <div id="galleryCarousel" class="carousel slide" data-bs-ride="carousel">
        <!-- Carousel Indicators -->
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#galleryCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#galleryCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#galleryCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
          <button type="button" data-bs-target="#galleryCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>

        <!-- Carousel Items -->
        <div class="carousel-inner">
          <!-- Slide 1 (3 görsel) -->
          <div class="carousel-item active">
            <div class="row g-4 justify-content-center">
              <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm overflow-hidden gallery-card">
                  <div class="image-container">
                    <img
                      src="/images/meetwork-etkinlik-7.jpg"
                      alt="Mini Etkinliklerden Kareler"
                      class="card-img-top gallery-img"
                      loading="lazy"
                    />
                  </div>
                  <div class="card-body p-4">
                    <div class="gallery-badge mb-3">
                      <span class="badge bg-warning text-dark">Mini Etkinlik</span>
                    </div>
                    <h5 class="card-title text-dark mb-2">Mini Etkinliklerden Kareler</h5>
                    <p class="card-text text-muted small">
                      Samimi ortamlarda kurulan derin iş bağlantıları
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm overflow-hidden gallery-card">
                  <div class="image-container">
                    <img
                      src="/images/meetwork-etkinlik-8.jpg"
                      alt="Akıllı Eşleşme Buluşmaları"
                      class="card-img-top gallery-img"
                      loading="lazy"
                    />
                  </div>
                  <div class="card-body p-4">
                    <div class="gallery-badge mb-3">
                      <span class="badge bg-primary">AI Eşleşme (Yapay Zeka ile)</span>
                    </div>
                    <h5 class="card-title text-dark mb-2">Akıllı Eşleşme Buluşmaları</h5>
                    <p class="card-text text-muted small">
                      Yapay zeka ile eşleştirilen mükemmel iş ortaklıkları
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm overflow-hidden gallery-card">
                  <div class="image-container">
                    <img
                      src="/images/meetwork-etkinlik-9.jpg"
                      alt="Talep Buluşmaları"
                      class="card-img-top gallery-img"
                      loading="lazy"
                    />
                  </div>
                  <div class="card-body p-4">
                    <div class="gallery-badge mb-3">
                      <span class="badge bg-success">Talep Eşleşme</span>
                    </div>
                    <h5 class="card-title text-dark mb-2">Talep Buluşmaları</h5>
                    <p class="card-text text-muted small">
                      Özel talepler için organize edilen özel buluşmalar
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Slide 2 (3 görsel) -->
          <div class="carousel-item">
            <div class="row g-4 justify-content-center">
              <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm overflow-hidden gallery-card">
                  <div class="image-container">
                    <img
                      src="/images/meetwork-etkinlik1111.jpg"
                      alt="Maxi Etkinlik Atmosferi"
                      class="card-img-top gallery-img"
                      loading="lazy"
                    />
                  </div>
                  <div class="card-body p-4">
                    <div class="gallery-badge mb-3">
                      <span class="badge bg-danger">Maxi Etkinlik</span>
                    </div>
                    <h5 class="card-title text-dark mb-2">Maxi Etkinlik Atmosferi</h5>
                    <p class="card-text text-muted small">
                      Büyük organizasyonlarda kurulan geniş iş ağları
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm overflow-hidden gallery-card">
                  <div class="image-container">
                    <img
                      src="/images/meetwork-etkinlik5.jpg"
                      alt="Win-Win Toplantıları"
                      class="card-img-top gallery-img"
                      loading="lazy"
                    />
                  </div>
                  <div class="card-body p-4">
                    <div class="gallery-badge mb-3">
                      <span class="badge bg-info">Win-Win</span>
                    </div>
                    <h5 class="card-title text-dark mb-2">Win-Win Toplantıları</h5>
                    <p class="card-text text-muted small">
                      Her iki tarafın da kazandığı stratejik buluşmalar
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm overflow-hidden gallery-card">
                  <div class="image-container">
                    <img
                      src="/images/meetwork-etkinlik-6.jpg"
                      alt="Network Kokteylleri"
                      class="card-img-top gallery-img"
                      loading="lazy"
                    />
                  </div>
                  <div class="card-body p-4">
                    <div class="gallery-badge mb-3">
                      <span class="badge bg-purple">Networking</span>
                    </div>
                    <h5 class="card-title text-dark mb-2">Network Kokteylleri</h5>
                    <p class="card-text text-muted small">
                      Rahat ortamlarda kurulan kalıcı iş ilişkileri
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Slide 3 (3 görsel) -->
          <div class="carousel-item">
            <div class="row g-4 justify-content-center">
              <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm overflow-hidden gallery-card">
                  <div class="image-container">
                    <img
                      src="/images/meetwork-etkinlik2.jpg"
                      alt="Birebir Görüşmeler"
                      class="card-img-top gallery-img"
                      loading="lazy"
                    />
                  </div>
                  <div class="card-body p-4">
                    <div class="gallery-badge mb-3">
                      <span class="badge bg-teal">Birebir</span>
                    </div>
                    <h5 class="card-title text-dark mb-2">Birebir Görüşmeler</h5>
                    <p class="card-text text-muted small">
                      Özel zamanlarda yapılan derinlemesine görüşmeler
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm overflow-hidden gallery-card">
                  <div class="image-container">
                    <img
                      src="/images/meetwork-etkinlik3.jpg"
                      alt="Sektörel Buluşmalar"
                      class="card-img-top gallery-img"
                      loading="lazy"
                    />
                  </div>
                  <div class="card-body p-4">
                    <div class="gallery-badge mb-3">
                      <span class="badge bg-orange">Sektörel</span>
                    </div>
                    <h5 class="card-title text-dark mb-2">Sektörel Buluşmalar</h5>
                    <p class="card-text text-muted small">
                      Aynı sektörden profesyonellerin özel buluşmaları
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm overflow-hidden gallery-card">
                  <div class="image-container">
                    <img
                      src="/images/meetwork-etkinlik4.jpg"
                      alt="İş Fırsatı Görüşmeleri"
                      class="card-img-top gallery-img"
                      loading="lazy"
                    />
                  </div>
                  <div class="card-body p-4">
                    <div class="gallery-badge mb-3">
                      <span class="badge bg-pink">Fırsat</span>
                    </div>
                    <h5 class="card-title text-dark mb-2">İş Fırsatı Görüşmeleri</h5>
                    <p class="card-text text-muted small">
                      Yeni iş fırsatlarının konuşulduğu özel toplantılar
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Slide 4 (1 görsel + 2 boş) -->
          <div class="carousel-item">
            <div class="row g-4 justify-content-center">
              <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm overflow-hidden gallery-card">
                  <div class="image-container">
                    <img
                      src="/images/meetwork-etkinlik5.jpg"
                      alt="Sponsorluk Toplantıları"
                      class="card-img-top gallery-img"
                      loading="lazy"
                    />
                  </div>
                  <div class="card-body p-4">
                    <div class="gallery-badge mb-3">
                      <span class="badge bg-indigo">Sponsorluk</span>
                    </div>
                    <h5 class="card-title text-dark mb-2">Sponsorluk Toplantıları</h5>
                    <p class="card-text text-muted small">
                      Sponsor firmalarla yapılan stratejik görüşmeler
                    </p>
                  </div>
                </div>
              </div>
              
              <!-- Boş alanlar için örnek kartlar -->
              <div class="col-md-4 d-none d-md-block">
                <div class="card h-100 border-0 shadow-sm overflow-hidden gallery-card coming-soon">
                  <div class="image-container bg-light">
                    <div class="d-flex align-items-center justify-content-center h-100">
                      <div class="text-center p-4">
                        <i class="bi bi-camera fs-1 text-muted mb-3"></i>
                        <h5 class="text-dark mb-2">Yeni Etkinliklerde</h5>
                        <p class="text-muted small mb-0">
                          Sizi de aramızda görmek isteriz...
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="col-md-4 d-none d-md-block">
                <div class="card h-100 border-0 shadow-sm overflow-hidden gallery-card coming-soon">
                  <div class="image-container bg-light">
                    <div class="d-flex align-items-center justify-content-center h-100">
                      <div class="text-center p-4">
                        <i class="bi bi-calendar-event fs-1 text-muted mb-3"></i>
                        <h5 class="text-dark mb-2">Gelecek Buluşmalarda birlikte olalım</h5>
                        <p class="text-muted small mb-0">
                          Panele gir ücretsiz kaydol yerini al...
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Carousel Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#galleryCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon bg-dark bg-opacity-75 rounded-circle p-3" aria-hidden="true"></span>
          <span class="visually-hidden">Önceki</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#galleryCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon bg-dark bg-opacity-75 rounded-circle p-3" aria-hidden="true"></span>
          <span class="visually-hidden">Sonraki</span>
        </button>
      </div>

      <!-- Etkinlik Türleri Bilgisi -->
      <div class="text-center mt-5">
        <div class="row g-3 justify-content-center">
          <div class="col-auto">
            <span class="badge bg-warning text-dark px-3 py-2">Mini Etkinlikler</span>
          </div>
          <div class="col-auto">
            <span class="badge bg-danger px-3 py-2">Maxi Etkinlikler</span>
          </div>
          <div class="col-auto">
            <span class="badge bg-primary px-3 py-2">Akıllı Eşleşme</span>
          </div>
          <div class="col-auto">
            <span class="badge bg-success px-3 py-2">Talep Buluşmaları</span>
          </div>
          <div class="col-auto">
            <span class="badge bg-info px-3 py-2">Win-Win Toplantıları</span>
          </div>
        </div>
        
      </div>
    </div>
  </section>

  <!-- CSS Stilleri -->
  <style>
    /* Özel Renk Tanımlamaları */
    .bg-purple { background-color: #6f42c1 !important; }
    .bg-teal { background-color: #20c997 !important; }
    .bg-orange { background-color: #fd7e14 !important; }
    .bg-pink { background-color: #e83e8c !important; }
    .bg-indigo { background-color: #6610f2 !important; }

    /* Gallery Carousel Özel Stiller */
    #galleryCarousel {
      position: relative;
    }

    /* Carousel Indicator Stilleri */
    #galleryCarousel .carousel-indicators {
      bottom: -60px;
    }

    #galleryCarousel .carousel-indicators button {
      width: 12px;
      height: 12px;
      border-radius: 50%;
      margin: 0 6px;
      border: 2px solid #6c757d;
      background-color: transparent;
      transition: all 0.3s ease;
    }

    #galleryCarousel .carousel-indicators button.active {
      background-color: #6c757d;
      transform: scale(1.3);
    }

    #galleryCarousel .carousel-indicators button:hover:not(.active) {
      background-color: rgba(108, 117, 125, 0.4);
    }

    /* Görsel Container - Dikdörtgen */
    .image-container {
      height: 250px;
      width: 100%;
      overflow: hidden;
      position: relative;
    }

    /* Dikdörtgen Görsel Stilleri */
    .gallery-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
    }

    .gallery-card:hover .gallery-img {
      transform: scale(1.08);
    }

    /* Kart Stilleri */
    .gallery-card {
      border-radius: 12px;
      overflow: hidden;
      transition: all 0.3s ease;
      height: 100%;
      display: flex;
      flex-direction: column;
    }

    .gallery-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 30px rgba(0,0,0,0.18) !important;
    }

    .gallery-card .card-body {
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .gallery-card .card-title {
      font-size: 1.1rem;
      font-weight: 600;
      line-height: 1.4;
    }

    .gallery-card .card-text {
      font-size: 0.9rem;
      line-height: 1.5;
      flex: 1;
    }

    /* Badge Stilleri */
    .gallery-badge .badge {
      font-size: 0.75rem;
      padding: 0.35rem 0.75rem;
      border-radius: 20px;
      font-weight: 500;
    }

    /* Coming Soon Kartları */
    .coming-soon {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border: 2px dashed #dee2e6 !important;
    }

    .coming-soon .image-container {
      background: transparent !important;
    }

    /* Carousel Control Butonları */
    #galleryCarousel .carousel-control-prev,
    #galleryCarousel .carousel-control-next {
      width: 60px;
      opacity: 0.9;
      transition: all 0.3s ease;
    }

    #galleryCarousel .carousel-control-prev {
      left: -30px;
    }

    #galleryCarousel .carousel-control-next {
      right: -30px;
    }

    #galleryCarousel .carousel-control-prev:hover,
    #galleryCarousel .carousel-control-next:hover {
      opacity: 1;
      transform: scale(1.1);
    }

    #galleryCarousel .carousel-control-prev-icon,
    #galleryCarousel .carousel-control-next-icon {
      width: 25px;
      height: 25px;
      background-size: 100% 100%;
    }

    /* Responsive Tasarım */
    @media (max-width: 768px) {
      .image-container {
        height: 200px;
      }
      
      #galleryCarousel .carousel-control-prev {
        left: 15px;
      }
      
      #galleryCarousel .carousel-control-next {
        right: 15px;
      }
      
      #galleryCarousel .carousel-indicators {
        bottom: -50px;
      }
      
      .gallery-card .card-body {
        padding: 1.5rem;
      }
      
      .gallery-card .card-title {
        font-size: 1rem;
      }
      
      .col-md-4.d-none.d-md-block {
        display: none !important;
      }
      
      /* Mobilde tekli gösterim */
      .carousel-inner .row {
        justify-content: center !important;
      }
      
      .carousel-inner .col-md-4 {
        flex: 0 0 100% !important;
        max-width: 100% !important;
      }
    }

    @media (min-width: 992px) {
      .image-container {
        height: 280px;
      }
      
      #galleryCarousel .carousel-control-prev {
        left: -40px;
      }
      
      #galleryCarousel .carousel-control-next {
        right: -40px;
      }
      
      .gallery-card .card-body {
        padding: 1.75rem;
      }
      
      .gallery-card .card-title {
        font-size: 1.2rem;
      }
    }

    @media (min-width: 1200px) {
      .image-container {
        height: 300px;
      }
    }

    /* Carousel Item Animasyonu */
    .carousel-item {
      transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Etiket Stilleri */
    .badge {
      font-weight: 500;
      letter-spacing: 0.3px;
    }

    /* Animasyonlar */
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .gallery-card {
      animation: fadeIn 0.6s ease-out;
    }
  </style>

  <!-- JavaScript - Gallery Carousel Otomatik Başlatma -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Gallery Carousel'ı başlat
      const galleryCarousel = new bootstrap.Carousel(document.getElementById('galleryCarousel'), {
        interval: 8000, // 8 saniyede bir ilerler
        wrap: true,
        pause: 'hover',
        touch: true,
        keyboard: true // Klavye ile kontrol
      });

      // Görsellere hover efekti
      const galleryCards = document.querySelectorAll('.gallery-card');
      galleryCards.forEach(card => {
        card.addEventListener('mouseenter', function() {
          this.style.transform = 'translateY(-8px)';
          this.style.boxShadow = '0 12px 30px rgba(0,0,0,0.18)';
          
          const img = this.querySelector('.gallery-img');
          if (img) {
            img.style.transform = 'scale(1.08)';
          }
        });
        
        card.addEventListener('mouseleave', function() {
          this.style.transform = 'translateY(0)';
          this.style.boxShadow = '';
          
          const img = this.querySelector('.gallery-img');
          if (img) {
            img.style.transform = 'scale(1)';
          }
        });
      });

      // Klavye kontrolleri
      document.addEventListener('keydown', function(e) {
        if (e.key === 'ArrowLeft') {
          galleryCarousel.prev();
        } else if (e.key === 'ArrowRight') {
          galleryCarousel.next();
        }
      });
    });
  </script>

</BaseLayout>