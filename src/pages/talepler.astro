    // ACCORDION FONKSƒ∞YONLARI
    function toggleAccordion(talepId) {
      const panel = document.getElementById(`panel-${talepId}`);
      const toggleBtn = document.getElementById(`toggle-${talepId}`);
      
      if (!panel || !toggleBtn) return;
      
      if (panel.classList.contains('active')) {
        panel.classList.remove('active');
        toggleBtn.textContent = '+';
        toggleBtn.classList.remove('minus');
      } else {
        panel.classList.add('active');
        toggleBtn.textContent = '‚àí';
        toggleBtn.classList.add('minus');
      }
