// src/pages/talepler.astro
import BaseLayout from '../layouts/BaseLayout.astro';

// API URL
const API_URL = 'https://panel.meetwork.net/talepler';

// API'den veri √ßekmeye √ßalƒ±≈ü
let talepler = [];
let yukleniyor = true;
let hata = null;

try {
  const response = await fetch(API_URL);
  if (response.ok) {
    const data = await response.json();
    if (data.success && data.data) {
      talepler = data.data;
    }
  }
  yukleniyor = false;
} catch (err) {
  hata = err.message;
  yukleniyor = false;
}

// Format tarih
const formatTarih = (tarihStr) => {
  if (!tarihStr) return '';
  const tarih = new Date(tarihStr);
  return tarih.toLocaleDateString('tr-TR', {
    day: '2-digit',
    month: '2-digit',
    year: 'numeric'
  });
};

// Kƒ±sa a√ßƒ±klama (ilk 100 karakter)
const kisaltAciklama = (aciklama) => {
  if (!aciklama) return '';
  return aciklama.length > 100 ? aciklama.substring(0, 100) + '...' : aciklama;
};
